div(ng-controller="Crafting as craftc")
  div(ng-repeat="building in craftc.crafting")
    .action-button(ng-if="!building.locked" ng-click="craftc.buy(building)" ng-class="{ 'inactive': !craftc.isBuyable(building) }")
      div {{building.name}}
      div.detail
        span(ng-repeat="(p, price) in craftc.prices(building)" ng-class="{ 'invalid': !price.affordable }")
          span(ng-if="price.$index") ,&nbsp;
          span {{price.name}}@{{price.buynow | numeric}}
        span &nbsp;
