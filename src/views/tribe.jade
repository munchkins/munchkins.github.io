div(ng-controller="Tribe as tribe")
  div(ng-repeat="type in tribe.types")
    .action-button(ng-if="!type.locked" ng-class="{ 'inactive': !tribe.isBuyable(type) || !tribe.free() }")
      a(ng-click="tribe.free() && tribe.buy(type)") {{type.name}} ({{type.value.current | numeric:0}})
      div.detail
        span &nbsp;
