doctype html
html(lang="en" ng-app="munchkins")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="description" content="")
    meta(name="author", content="")
    meta(name="viewport", content="width=device-width")
    title
    style .ng-cloak { display: none; }
    link(rel="stylesheet" type="text/css" href="munchkins.css")
      
  body.ng-cloak(ng-controller="Game as game")
    .container
      .topmenu(ng-include="'views/topmenu.html'")
    .container
      .submenu(ng-include="'views/submenu.html'")
    .container
      .crafting-panel(ng-include="'views/crafting.html'")
      .action-panel
        div(ng-view)
        div &nbsp;
      .resource-panel(ng-include="'views/resources.html'")
      
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular-route.min.js")
